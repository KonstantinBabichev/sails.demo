<div ng-app="fuzzyMap">
  <h1>Places</h1>

  <div class="places__map" ng-controller="MapController as placesMap">
    <div id="googleMap" style="width:100%;height:300px;"></div>
  </div>

  <div class="places__list" ng-controller="PlacesController as placesList">
    <a href="" ng-click="placesList.update()">UPDATE</a>
    <ul>
      <li ng-repeat="place in placesList.places.getList()">
        <h2 ng-bind="place.title"></h2>

        <h3 ng-bind="place.address"></h3>

        <div class="intro" ng-bind-html="place.body"></div>
        <!--<input type="checkbox" ng-model="todo.done">-->
        <!--<span class="done-{{todo.done}}">{{todo.text}}</span>-->
      </li>
    </ul>
  </div>
</div>

<script src="http://maps.googleapis.com/maps/api/js"></script>
